<div class="row">
  <div class="col-4">
    <%= f.field_container :image do %>
      <%= f.label :image %>
      <%= f.file_field :image %>
      <%= f.error_message_on :image %>
    <% end %>
  </div>

  <div class="col-8">
    <%= f.field_container :alt do %>
      <%= f.label :alt, I18n.t("spree.content_image_teasertext") %><br />
      <%= f.text_area :alt, rows: 2, class:"fullwidth" %>
    <% end %>
  </div>

</div>
