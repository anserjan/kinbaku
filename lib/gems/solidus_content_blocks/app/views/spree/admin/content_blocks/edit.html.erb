<% content_for :page_title do %>
  <%= I18n.t("spree.content_block") %> <%= I18n.t("spree.for_page") %> '<%= @page.title %>': <%= I18n.t("spree.edit_content_block") %>
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to I18n.t("spree.content_blocks"), admin_page_content_blocks_url(@page), class: "btn btn-primary" %></li>
  <li><%= link_to I18n.t("spree.back_to_page"), spree.edit_admin_page_path(@page.id), class: "btn btn-primary" %></li>
<% end %>

<%= render "spree/shared/error_messages", :target => @content_block %>

<%= form_for([:admin, @page.id, @content_block],
    url:  admin_page_content_block_url(@page, @content_block),
    html: { multipart: true }) do |form| %>
  <fieldset class="no-border-top">
    <%= render "form", f: form %>
    <div class="form-buttons filter-actions actions">
      <%= button_tag t('spree.actions.update'), class: 'btn btn-primary' %>
      <%= link_to t('spree.actions.cancel'), spree.edit_admin_page_path(@page.id), class: 'button' %>
    </div>
  </fieldset>
<% end %>
