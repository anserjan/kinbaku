<div class="row">
  <div class="col-12">
    <%= f.field_container :enumeration_text do %>
      <%= f.label :enumeration_text, I18n.t(:partition) %><br />
      <%= f.select :enumeration_text,
                   SolidusContentBlocks::Engine.config.partition_enums.
                   map { |pe| [I18n.t("partition_enums.#{pe}"), pe] }, {},
                   { class: "title fullwidth select2" } %>    <% end %>
  </div>

  <div class="col-6">
    <%= f.field_container :body_1 do %>
      <%= f.label :body_1, I18n.t(:body_1) %><br />
      <%= f.cktext_area :body_1, {rows: 8, :class => 'fullwidth'} %>
      <%= f.error_message_on :body_1 %>
    <% end %>
  </div>

  <div class="col-6">
    <%= f.field_container "image_list" do %>
      <%= f.label nil, I18n.t("spree.content_types.images") %><br />
      <%= render partial: "/spree/admin/content_blocks/content_types/images", locals: { f: f } %>
    <% end %>
  </div>
</div>
