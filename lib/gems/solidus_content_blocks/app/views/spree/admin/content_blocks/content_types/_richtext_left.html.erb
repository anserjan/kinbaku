<div class="row">
  <div class="col-6">
    <% if @content_block.images.present? %>
    <% else %>
      <div class="no-objects-found">
        <%= I18n.t("spree.no_resource_found", resource: "Image") %>,
        <%= link_to I18n.t("spree.add_one"), spree.new_admin_page_content_block_image_url(@page, @content_block) %>!
      </div>
    <% end %>
  </div>

  <div class="col-6">
    <%= f.field_container :body_1 do %>
      <%= f.label :body_1, I18n.t("spree.body_1") %><br />
      <%= f.cktext_area :body_1, {rows: 8, class: 'fullwidth'} %>
      <%= f.error_message_on :body_1 %>
    <% end %>
  </div>
</div>
