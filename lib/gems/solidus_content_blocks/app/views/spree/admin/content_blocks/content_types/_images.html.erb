<% if @content_block.images.present? %>
  <div>
    <%= f.field_container :images do %>
      <%= f.label :images %>
      <%= f.file_field :images, multiple: true %>
      <%= f.error_message_on :images %>
    <% end %>
  </div>
  <br>
  <table class="table index sortable" data-sortable-link="<%= update_positions_admin_page_content_blocks_url(@page, @content_block) -%>">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @content_block.images.each do |image| %>
        <tr id="<%= spree_dom_id(image) %>">
          <td class="move-handle text-left">
            <span class="icon icon-move handle ui-sortable-handle"></span>
          </td>
          <td><%= image_tag image.variant(resize_to_limit: [48,48]).processed.url %></td>
          <td><%#= image.alt %></td>
          <td class="actions">
            <%= link_to "", admin_page_content_block_url(@page, @content_block, image),
                        class: "delete-resource fa fa-trash icon_link with-tip no-text",
                        title: I18n.t("spree.delete"),
                        data: { confirm: I18n.t("spree.are_you_sure"), action: I18n.t("spree.remove") } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div>
    <%= f.field_container :images do %>
      <%= f.label :images %>
      <%= f.file_field :images, multiple: true %>
      <%= f.error_message_on :images %>
    <% end %>
  </div>
<% end %>
