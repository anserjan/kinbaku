<% if @content_block.images.present? %>
  <div class="form-buttons filter-actions actions">
    <%= link_to I18n.t("spree.add_content_image"), spree.new_admin_page_content_block_image_url(@page, @content_block), class: "btn btn-primary" %>
  </div>
  <br>
  <table class="table index sortable" data-sortable-link="<%= update_positions_admin_page_content_block_images_url(@page, @content_block) -%>">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @content_block.images.each do |image| %>
        <tr id="<%= spree_dom_id(image) %>">
          <td class="move-handle text-left">
            <span class="icon icon-move handle ui-sortable-handle"></span>
          </td>
          <td>
            <%= link_to(image_tag(image.attachment.url(:mini)), image.attachment.url(:original), target: "_blank") %>
          </td>
          <td>
            <%= image.alt %>
          </td>
          <td class="actions">
            <%= link_to "", edit_admin_page_content_block_image_url(@page, @content_block, image),
                        class: "fa fa-edit icon_link with-tip no-text",
                        data: { action: "edit", "original-title": I18n.t(:edit) } %>
            <%= link_to "", admin_page_content_block_image_url(@page, @content_block, image),
                        class: "delete-resource fa fa-trash icon_link with-tip no-text",
                        title: I18n.t("spree.delete"),
                        data: { confirm: I18n.t("spree.are_you_sure"), action: I18n.t("spree.remove") } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= I18n.t("spree.no_resource_found") %>,
    <%= link_to I18n.t("spree.add_one"), spree.new_admin_page_content_block_image_url(@page, @content_block) %>!
  </div>
<% end %>
