<% content_for :page_actions do %>
  <li><%= link_to I18n.t("menu_bars.new_menu_bar"), new_object_url, id: 'admin_new_menu_bar', class: "btn btn-primary" %></li>
<% end %>

<% content_for :page_title do %>
   <%= I18n.t("spree.menu_bars") %>
<% end %>

<% if @menu_bars.any? %>
<table class="table">
  <thead>
    <tr>
      <th><%= I18n.t("menu_bars.name") %></th>
      <th class="actions"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_bars.each do |menu_bar| %>
      <tr class="<%= cycle('odd', 'even') %>" id="<%= dom_id menu_bar %>">
        <td><%= menu_bar.name %></td>
        <td class="actions">
          <%= link_to "", admin_menu_bar_menus_path(menu_bar),
                      class: "fa fa-bars icon_link with-tip no-text",
                      data: { "original-title": I18n.t("menus.list_of_menus") } %>
          <%= link_to_edit menu_bar, :no_text => true %>
          <%= link_to_delete menu_bar, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <div class="no-objects-found">
    <%= render 'spree/admin/shared/no_objects_found',
                  resource: Spree::MenuBar,
                  new_resource_url: new_object_url %>
  </div>
<% end %>
