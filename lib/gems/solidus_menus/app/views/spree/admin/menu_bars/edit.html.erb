<% content_for :page_title do %>
   <%= I18n.t("spree.menu_bars") %>: <%= I18n.t("menu_bars.editing_menu_bar") %> "<%= @menu_bar.name %>"
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to I18n.t("menu_bars.back"), spree.admin_menu_bars_url, class: "btn btn-primary" %></li>
<% end %>

<%= render "spree/shared/error_messages", :target => @menu_bar %>

<%= form_for [:admin, @menu_bar] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
