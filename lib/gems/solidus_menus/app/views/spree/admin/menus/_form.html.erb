<div class="row">
  <div class="col-md-12">
    <% if @menu.sequence.blank? %>
      <%= f.hidden_field :sequence, class: 'sequence', value: @sequence %>
    <% end %>

    <%= f.field_container :link_text do %>
      <%= f.label :link_text, class: "required" %>
      <%= f.text_field :link_text, class: 'form-control', required: true %>
      <%= f.error_message_on :link_text %>
    <% end %>

    <%= f.field_container :url do %>
      <%= f.label :url, class: "required" %>
      <%= f.text_field :url, class: 'form-control', required: true %>
      <%= f.error_message_on :url %>
    <% end %>

    <%= f.field_container :css_class do %>
      <%= f.label :css_class, I18n.t("menus.css_class") %>
      <%= f.field_hint :css_class %>
      <%= f.text_field :css_class, class: 'form-control' %>
      <%= f.error_message_on :css_class %>
    <% end %>
  </div>
</div>
