<% admin_breadcrumb(plural_resource_name(Spree::Menu)) %>

<% content_for :page_actions do %>
  <% if can?(:create, Spree::Menu) %>
    <%= link_to t("spree.new_menu"), new_object_url, class: "btn btn-primary" %>
  <% end %>
<% end %>

<% if @menus.any? %>
  <table class="index sortable" id='listing_menus' data-hook data-sortable-link="<%= update_positions_admin_menus_url %>">
    <colgroup>
      <col style="width: 10%">
      <col style="width: 20%">
      <col style="width: 15%">
      <col style="width: 15%">
      <col style="width: 40%">
    </colgroup>
    <thead>
      <tr>
        <th></th>
        <th><%= Spree::Taxonomy.human_attribute_name(:name) %></th>
        <th><%= I18n.t("spree.page") %></th>
        <th><%= I18n.t("spree.url") %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "list", locals: { menus: @menus.select { |menu| menu.parent_id.eql? nil } } %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= render 'spree/admin/shared/no_objects_found',
                 resource: Spree::Menu,
                 new_resource_url: new_object_url %>
  </div>
<% end %>