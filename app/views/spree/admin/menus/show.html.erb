<% admin_breadcrumb(link_to(plural_resource_name(Spree::Menu), spree.admin_menus_url)) %>
<% admin_breadcrumb(@menu.link_text) %>

<table class="index sortable" id='listing_menus' data-hook data-sortable-link="<%= update_positions_admin_menus_url %>">
  <colgroup>
    <col style="width: 10%">
    <col style="width: 20%">
    <col style="width: 20%">
    <col style="width: 50%">
  </colgroup>
  <thead>
    <tr>
      <th></th>
      <th><%= Spree::Taxonomy.human_attribute_name(:name) %></th>
      <th><%= I18n.t("spree.url") %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "list", locals: { menus: @menu.children } %>
  </tbody>
</table>

<%= form_for [:admin, Spree::Menu.new] do |f| %>
  <fieldset>
    <legend align="center"><%= t('spree.new_menu') %></legend>
    <%= render partial: "form", locals: { f:f } %>
    <%= f.hidden_field :parent_id, value: @menu.id %>
    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>