<table>
  <colgroup>
    <col style="width: 50%;">
    <col style="width: 15%;">
    <col style="width: 15%;">
    <col style="width: 15%;">
    <col style="width: 5%;">
  </colgroup>
  <thead>
    <tr>
      <th><%= I18n.t("spree.name") %></th>
      <th><%= I18n.t("spree.total_cash") %></th>
      <th><%= I18n.t("spree.total_deposits") %></th>
      <th><%= I18n.t("spree.remaining_cash") %></th>
      <th class="action align-right"></th>
    </tr>
  </thead>
  <tbody>
    <% trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.name_and_email %></td>
        <td><%= Spree::Money.new(trainer.cash_amount) %></td>
        <td><%= Spree::Money.new(trainer.total_deposits) %></td>
        <td><%= Spree::Money.new(trainer.cash_remaining) %></td>
        <td class="action align-right">
          <%= link_to_with_icon "edit", I18n.t("spree.edit"), deposits_admin_user_url(trainer.id), no_text: true if can?(:edit, trainer) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>